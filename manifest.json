{
  "manifest_version": 2,
  "name": "Trello Checklists",
  "description": "Trello Checklists in single place with reminders",
  "short_name": "TrelloCheck",
  "version": "1.0",
  
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {                    
      "16": "images/icon16.png",         
      "48": "images/icon48.png",         
      "128": "images/icon128.png"          
    }
  },

  "externally_connectable": {
    "ids": [ 
      "*"
    ],
    "matches": [
      "https://trello.com/*"
    ]
  },

  "web_accessible_resources": [
    "login.html"
  ],
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "https://www.goodreads.com/",
    "https://www.googleapis.com/",
    "https://trello.com/"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_security_policy": "script-src 'self' https://sg.media-imdb.com https://*.media-imdb.com https://trello.com; object-src 'self'"
}